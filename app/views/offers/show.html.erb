<div class="cont-wrapper">
  <div class="grid">
    <div class="g-col-6 m-3">
      <h1>
        <%= @offer.title %>
      </h1>
      <hr class="border border-dark border-2 opacity-50">
      <h4>
        <%= @offer.description %>
      </h4>
      <div class="booking">
        <%= link_to "Book", new_offer_appointment_path(@offer) %>
      </div>
      <hr class="border border-dark border-2 opacity-50" style="margin-top: 75px;">
    </div>
    <div class="g-col-6">
      <div class="g-col-6 g-col-md-4">
          <%= cl_image_tag(@offer.photo.key, width: 600, height: 500, crop: :fill) %>
      </div>
    </div>
  </div>
</div>

  <div class="more">
    <h3>MORE OF THE USER...</h3>
  </div>

<div class="grid">
  <% @offer.user.offers.excluding(@offer).first(3).each do |offer| %>
    <div class="offer-pic">
       <h4><%= offer.title %></h4>
      <div type="button" data-bs-toggle="modal" data-bs-target="#exampleModal"><%= cl_image_tag offer.photo.key, height: 300, width: 520, crop: :fill %>
      </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%= offer.title %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= cl_image_tag offer.photo.key, height: 300, width: 400, crop: :fill %>
                <p><%= offer.description %></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary">Discover more</button>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>

<div class="container">
 <div id="cool-map" style="width: 100%; height: 600px;"
   data-controller="map"
   data-map-markers-value="<%= Array(@markers).to_json %>"
   data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
 </div>
</div>
