<h1 class = "header">Create a new offer</h1>
<h2 class = "header">Find me in app/views/offers/new.html.erb</h2>

<div class = "form">
  <%= simple_form_for(@offer) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :hourly_rate %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file%>
    <%= f.button :submit %>
  <% end %>
</div>
