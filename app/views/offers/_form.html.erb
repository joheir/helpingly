<div class = "form">
  <%= simple_form_for(@offer) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :hourly_rate %>
    <%= f.input :location %>
    <%= f.input :category, collection: %w[Home Sports Education Pets Arts Music Garden Other] %>
    <%= f.input :photo, as: :file%>

      <div class="form-actions">
        <%= f.button :submit, 'Save' %>
      </div>
  <% end %>
</div>
